<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jordan_hill.iidx.clear_tracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <activity
            android:name="com.jordan_hill.iidx.clear_tracker.HomeActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jordan_hill.iidx.clear_tracker.FolderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.jordan_hill.iidx.clear_tracker.AddToGoalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.jordan_hill.iidx.clear_tracker.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.jordan_hill.iidx.clear_tracker.SettingsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>